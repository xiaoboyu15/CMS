<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD 
 Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace实际上接口的名字 -->
<mapper namespace="mapper.QuestionnaireMapper">

	<select id="getQuestionnaireByID" resultType="Questionnaire">
		select * from questionnaire
		where questionnaireID=#{questionnaireID}
	</select>
	<select id="getAllQuestionnaire" resultType="Questionnaire">
		select * from questionnaire
	</select>
	<select id="getChildByName" resultType="Questionnaire">
		select * from #{questionnaireName}
	</select>
	<select id="getAllChild" resultType="Questionnaire">
		select * from questionnaire
		where questionnaireID=#{questionnaireID}
	</select>
	<insert id="insertQuestionnaire" parameterType="Questionnaire">
		insert into 
			questionnaire
			values (
			#{questionnaireID},#{questionnaireName}
			)
	</insert>
	
	<insert id="insertChild" parameterType="Questionnaire">
		insert into 
			${questionnaireName}
			values (
			#{childID},
			<foreach collection="QA" index="index" item="QA"  separator="," >
            		#{QA}
        	</foreach>
			)
	</insert>
	
	<delete id="deleteQuestionnaire">
		delete from questionnaire where
		questionnaireID=#{questionnaireID}
	</delete>
	
	<update id="deleteQuestionnaireChild" parameterType="Questionnaire">
		drop table ${questionnaireName}
	</update>
	
	<update id="updateQuestionnaire" parameterType="Questionnaire">
		create table ${questionnaireName}(
			childID int primary key,
			 <foreach collection="QA" index="index" item="QA"  separator="," >
            		${QA} varchar(255)
        	</foreach>
        	
		)
	</update>

</mapper>
